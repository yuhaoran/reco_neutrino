SHELL = /bin/sh
FC=mpif90
P3DFFT_LIB=-L/HOME/bnu_ztj_1/lib/p3dfft_2.5.1/lib/
P3DFFT_INC=-I/HOME/bnu_ztj_1/lib/p3dfft_2.5.1/include/
MKL_FFTW_INC=-I/opt/intel/composer_xe_2013_sp1.2.144/mkl/include/fftw/
MKL_FFTW_LIB=-L/opt/intel/composer_xe_2013_sp1.2.144/mkl/lib/intel64/

#LDLIBS= -lp3dfft -lmkl_intel_lp64 
LDLIBS= -lp3dfft 	 	            -lm -ldl   -lmkl_intel_lp64
#                  ^:ld: cannot find -lfftw3f_omp
